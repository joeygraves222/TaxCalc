<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Orders"
             x:Class="TaxCalc.Views.OrdersPage">
    <ContentPage.Content>
        <AbsoluteLayout>
            <ListView x:Name="OrdersListView" AbsoluteLayout.LayoutFlags="SizeProportional" AbsoluteLayout.LayoutBounds="0,0,1,1"></ListView>
            <Button BackgroundColor="{StaticResource Accent}" x:Name="AddNewOrderBtn" Clicked="AddNewOrderBtn_Clicked" AbsoluteLayout.LayoutFlags="PositionProportional" AbsoluteLayout.LayoutBounds="0.93, 0.96, 60, 60" CornerRadius="30" FontFamily="Material" Text="&#xe145;" FontSize="40"></Button>
        </AbsoluteLayout>
    </ContentPage.Content>
</ContentPage>